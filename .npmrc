# pnpm configuration for React Native/Expo
# Enable strict peer dependencies to avoid issues
strict-peer-dependencies=false

# Use node-linker=hoisted for better React Native compatibility
# This ensures native modules are properly linked
node-linker=hoisted

# Shamefully hoist dependencies to avoid Metro bundler issues
# React Native's Metro bundler sometimes has issues with pnpm's strict isolation
shamefully-hoist=true

# Public hoist pattern for React Native packages
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=@react-native/*
public-hoist-pattern[]=@expo/*
